<div class="container">
	<div class="row">
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
			<%= image_tag @user.profile.avatar.url %>
		</div>
		<div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 col-md-1-offset">
			<h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>

			<!--checks for paid subscription to show exclusive content -->
			<% if current_user.plan_id == 2 %>
				<p><%= @user.profile.phone_number  %></p>	
				<p><%= @user.profile.contact_email  %></p>	
			<% end %>
			<p><%= @user.profile.title  %></p>	
			<p><%= @user.profile.description  %></p>	
		</div>
	</div>
</div>



