<% if  user_signed_in? %>	
	<div class="col-md-6">
		<div class="well">
		<h2 class="text-center">Your Profile</h2>
			<% if current_user.profile %>
				<%= link_to 'Edit your profile', edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
				<%= link_to 'View your profile', user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
			<% else %>
				<%= link_to 'Create your profile', new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
			<% end %>	
		</div>
	</div>
	<div class="col-md-6">
		<div class="well">
		<h2 class="text-center">Community</h2>	
			<%= link_to 'Visit the community', '#', class: 'btn btn-default btn-lg btn-block' %>
		</div>
	</div>
<% else %>
	<div class="jumbotron text-center">
		<h1>Welcome to SaaS App</h1>
		<h3>Template for future pay SaaS Site</h3>
	</div>
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
			<div class="well">
				<h2 class="text-center">Basic Membership</h2>
				<h4 class="text-center">Basic access to the community</h4>
				<%= link_to 'Sign up free', new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
			</div>	
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
			<div class="well">
				<h2 class="text-center">Pro Membership</h2>
				<h4 class="text-center">Pro account $10/month and get full access</h4>
				<%= link_to 'Sign up Pro Account', new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
			</div>	
		</div>
	</div>
<% end %>